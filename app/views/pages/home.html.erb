<html lang="en">
  <title>alextheyounger.com</title>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  
  
  <body>
   <main role="main">

      
    <div align="center" id="header" class="container-fluid">
      <img id="hammock" align="center" <%= image_tag("hammock_cutout.png", :alt => "hammock_cutout") %>
      <h1 class="display-3" id="name">Alex Younger</h1>
      <p align="center" id="header-sub">I build websites & applications and I write articles that make you question your existence.</p>
      <q id="header-sub"><i>It is what it is, and it's pretty good.</i></q> 
    </div> 
        
  
   
   
  <%= if @articles.any? 
     then @articles.each do |article|%>
  
    <div class="row">
      <div id="article-div" class="col-xs-8">
        <div class= "well well-lg">
          <div class= "article-title">
            <%= link_to article.title, article_path(article) %>
          </div>
        
          <div class="article-body">
            <%= truncate(article.description, length: 100) %>
            <div class= "article-meta-details">
              <small>Created<%#= article.user.username if article.user %>
                                <%= time_ago_in_words(article.created_at) %> ago, 
                                Last updated: <%= time_ago_in_words(article.updated_at) %> ago </small>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>



        
        

        <hr>

    </main>
    
  </body>
  <% end %>
  <% end %>