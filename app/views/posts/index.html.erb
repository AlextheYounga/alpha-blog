<body>

 <a href="https://medium.com/@AlextheYounger">
   <div align="center"><%= image_tag("medium_banner.png", :alt => "medium_banner", id: "medium-banner") %></div>
 </a>
 
  <% @posts.each do |post|%>
    <div class="row">
      <div id="article-div" class="col-xs-8">
        <div class= "well well-lg">
          <div class= "article-title">
            <a href=<%="#{post.link}"%>> <%="#{post.title}"%></a>
          </div>
          
          <div>
            <p><%= truncate(strip_tags("#{post.content.html_safe}"), length: 280) %></p>
          </div>
          
          <div class= "article-meta-details">
            <small>
              Created <%= time_ago_in_words "#{post.pubDate}"%> ago
            </small>
          </div>
        </div>  
      </div>
    </div>
  </br>
  <% end %>
    
    <a class="btn btn-lg btn-success" href="https://medium.com/@AlextheYounger/latest" role="button" align="center">
      View All Posts</a>
</body>