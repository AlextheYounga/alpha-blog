<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%#= before_filter if :loggedin? %>
  <!--  <div id="article-actions"></div>-->
  <%# end %>

</br>
<h1 id="page-header" align="center">All Articles</h1>

<div align="center" id="create-button"> 
<% if logged_in? %>
<%= link_to "Create New Article", new_article_path, class: "btn btn-lg btn-primary" %>
<% else %>
<%= nil %>
<% end %>
</div>
<!-- Because there's |article| as the key, we have to refer to each article as (article) not (@article)-->

<% @articles.each do |article| %>
   <div class="row">
      <div id="article-div" class="col-xs-8">
        <div class= "well well-lg">
          <div class= "article-title">
            <%= link_to article.title, article_path(article) %>
          </div>
        
          <div class="article-body">
            <%= truncate(strip_tags(article.description), length: 420) %>
            <div class= "article-meta-details">
              <small>Created<%#= article.user.username if article.user %>
                                <%= time_ago_in_words(article.created_at) %> ago, 
                                Last updated: <%= time_ago_in_words(article.updated_at) %> ago </small>
          
           
   <div id="article actions" class="article-actions">
            <% if logged_in? %>
            <%= link_to "Edit this Article", edit_article_path(article), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this Article", article_path(article), method: :delete,
            
                                        data: {confirm: "Are you sure you want to delete the article?"},
                                        class: "btn btn-xs btn-danger" %>
            <% else %>
          <%= nil %>
        <% end %>
            
                                        
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

</br>

<% end %>