<table id="watchlist" class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Symbol</th>
        <th>Current Price</th>
        <% if logged_in? %>
          <th>Actions</th>
        <% end %>
      </tr>
    </thead>
  </table> 
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td><%= @user_stocks.company_name%></td>
        <td><%= @user_stocks.symbol %></td>
        <td><%= @user_stocks.latest_price %></td>
        <% if logged_in? %>
          <td> <%= link_to "Delete from WatchList", user_stocks_path(user_stock), method: :delete, 
                    data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger"%>
          </td>
          <% end %>
      </tr>
      <% end %>
  </tbody>